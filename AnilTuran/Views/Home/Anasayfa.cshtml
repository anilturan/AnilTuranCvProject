                        <li class="hidden-xs"><a href="#" data-filter=".web"><span>Web</span></a></li>
                    </ul>
                </div>
                <!-- /END WORKS FILTER -->
                <div id="works-container" class="works-container clearfix">
                    <!-- WORKS ITEM -->
                    <div class="works-item ui web" data-src="/img/works/01_full.jpg">
                        <img src="/img/works/01_thumb.jpg" data-no-retina alt="" />
                        <div class="works-item-inner">
                            <h4>Print Design</h4>
