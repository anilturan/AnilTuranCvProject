    <link href="~/Content/main.css" rel="stylesheet" />
    <!-- FONTS -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500">
</head>
<body class="layout-1 index-image">
    <!-- PRELOADER -->
    <div class="loader-wrapper">
        <div class="loader"></div>
    </div>
    <!-- /END PRELOADER -->
    <!-- INTRO -->
    <div class="intro">
        <div class="intro-inner intro-inner-left">
            <!-- BACKGROUND IMAGE -->
            <div class="main-bg bg-image overlay" data-image="/img/pexels-photo.jpeg"></div>
        </div>

        <div class="intro-inner intro-inner-right">
            <p align="right">
                <a href="@Url.Action("Login","Account")" class="dropdown-toggle">
                    <i class="glyphicon glyphicon-user"> Admin Girişi    </i>
                </a>
            </p>
            <div class="intro-content">
                <!-- YOUR AVATAR -->
                <img src="~/img/avatar.jpg" class="avatar" alt="avatar">

                <!-- YOUR DESCRIPTION -->
                <h1>@(Model.Ad + " " + Model.Soyad)</h1>
                <p class="desc"><span class="typed">Web Designer</span></p>
                <!-- TYPED STRINGS -->
                <div class="typed-strings">
                    @foreach (var item in Model.Unvanlar)
                    {
                        <p>@item.UnvanAdi</p>
                    }
                </div>
                <p>
                    <button class="btn btn-glossy inverse goto-right"><span>Hakkımda</span></button>
                </p>
               
            </div>
        </div>
    </div>
    <!-- /END INTRO -->
    <!-- MAIN -->
    <div class="main main-right">
        <div class="container-fluid">
            <!-- ABOUT -->
            <div id="about" class="section-block">
                <h3 class="title">Hakkımda</h3>
                <p>@Model.Hakkimda</p>
                @*<p> @Html.ActionLink("indir", "File", "Cvs")  </p>*@
                <p>
                    <a download href="~/File/CV/AnilTuran_CV (2).pdf"><span class="glyphicon glyphicon-download"></span><strong>  Download My CV   </strong></a>
                    <a href="@Model.Link1" target="_blank"> <strong> GitHub  </strong></a>
                    <a href="@Model.Link2" target="_blank"><span class="btn-linkedin"></span> <strong>Linkedin</strong></a>

                </p>
            </div>
          
            <!-- /END ABOUT -->
            <!-- EDUCATION -->
            <div id="education" class="section-block">
                <h3 class="title">Eğitim Bilgileri</h3>
                <p></p>
                <div class="timeline edu-timeline">
                    @foreach (var item in Model.Egitimler)
            {

                var dateBit = "";
                if (item.BitisTarihi != null)
                {
                    dateBit = item.BitisTarihi.Value.ToShortDateString();
                }
                <div class="timeline-item">
                    <div class="col-sm-3">
                        <span class="time"><b>@(item.BaşlamaTarihi.ToShortDateString() + "-" + dateBit)</b></span>
                    </div>
                    <div class="col-sm-5">
                        <span class="institute">@item.OkulAdi</span>
                    </div>
                    <div class="col-sm-4">
                        <span class="degree">@(item.BolumAdi + " / " + item.EgitimSeviyesi)</span>
                    </div>
                    <p> <span class="institute">@item.Aciklama</span></p>
                </div>


    }
                </div>
            </div>
            <!-- /END EDUCATION -->
            <!-- EXPERIENCE -->
            <div id="education" class="section-block">
                <h3 class="title">Eğitim Bilgileri</h3>
                <p></p>
                <div class="timeline edu-timeline">



                    @foreach (var item in Model.Deneyimler)
            {
                var date = "";
                if (item.BitisTarihi != null)
                {
                    date = item.BitisTarihi.Value.ToShortDateString();
                }
                // var date = item.BitisTarihi != null ? item.BitisTarihi.Value.ToShortDateString() ? ""
                <div class="timeline-item">
                    <div class="col-sm-3">
                        <span class="time"><b>@(item.BaslamaTarihi.ToShortDateString() + " - " + date)</b></span>
                    </div>
                    <div class="col-sm-6">
                        <span class="institute">@item.SirketAdi</span>
                    </div>
                    <div class="col-sm-3">
                        <span class="degree">@item.PozisyonAdi</span>
                    </div>
                </div>
    }
                </div>
            </div>
            <!-- /END EXPERIENCE -->
            <!-- PROJECTS -->
            <div id="experience" class="section-block">
                <h3 class="title">Projeler</h3>
                <p></p>
                <div class="timeline exp-timeline text-xs-center text-sm-left">
                    @foreach (var item in Model.Projeler)
            {
                <div class="timeline-item">
                    <div class="timeline-image">
                        <img src="/img/experience/01.jpg" alt="">
                    </div>
                    <div class="timeline-content">
                        <span class="time"></span>
                        <h4>@item.ProjeAdi</h4>
                        <h5><a href="@item.Link" target="_blank">Projeye gitmek için tıklayınız.. ->GitHub</a></h5>
                        <p>@item.Aciklama</p>
                    </div>
                </div>
    }
                </div>
            </div>
            <!-- /END PROJECTS -->
            <!-- SKILLS -->
            <div id="skills" class="section-block">
                <h3 class="title">Yetenekler</h3>

                <div class="progress-bars p-t-30">
                    @foreach (var item in Model.Yetenekler)
            {
                <div class="progress-info">@item.BeceriAdi</div>
                <div class="progress">
                    <div class="progress-bar anim" data-percent=@item.BeceriDerecesi>
                        <span class="value">%@item.BeceriDerecesi</span>
                    </div>
                </div>
    }
                </div>
            </div>
            <!-- /END SKILLS -->
            <!-- PORTFOLIO -->
            <div id="portfolio" class="section-block">
                <h3 class="title">Portfolio</h3>
                <!-- WORKS FILTER -->
                <div class="works-filter-wrap">
                    <ul class="works-filter clearfix font2">
